{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Scheduler (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/freertos_sim.exe",
            "args": ["giris.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
